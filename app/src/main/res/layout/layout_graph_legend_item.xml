<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_legend_color"
        android:layout_width="@dimen/spacing_6x"
        android:layout_height="@dimen/spacing_6x"
        android:layout_margin="@dimen/spacing_2x"
        android:background="@drawable/legend_bg"
        android:elevation="@dimen/spacing_1x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_legend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="@string/app_name"
        android:layout_marginStart="@dimen/spacing_3x"
        app:layout_constraintBottom_toBottomOf="@+id/iv_legend_color"
        app:layout_constraintStart_toEndOf="@+id/iv_legend_color"
        app:layout_constraintTop_toTopOf="@+id/iv_legend_color"
         />
    <TextView
        android:id="@+id/tv_legend_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxWidth="@dimen/spacing_12x"
        tools:text="@string/app_name"
        android:layout_marginStart="@dimen/spacing_3x"
        app:layout_constraintBottom_toBottomOf="@+id/iv_legend_color"
        app:layout_constraintStart_toEndOf="@+id/tv_legend_label"
        app:layout_constraintTop_toTopOf="@+id/iv_legend_color"
        />


</androidx.constraintlayout.widget.ConstraintLayout>