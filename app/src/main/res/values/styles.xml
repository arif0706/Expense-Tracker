<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="AppTheme.Slide" parent="Theme.MaterialComponents">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/spacing_3x</item>
        <item name="android:paddingTop">@dimen/spacing_4x</item>
        <item name="android:textColor">@color/green_700</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/sheet_background</item>
    </style>
    <style name="Widget.MaterialComponents.Button.IconOnly" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/spacing_3x</item>
        <item name="android:paddingEnd">@dimen/spacing_3x</item>
        <item name="android:minWidth">@dimen/spacing_3x</item>
        <item name="minHeight">@dimen/spacing_3x</item>
        <item name="iconGravity">textStart</item>
        <item name="android:background">@drawable/round_icon_bg</item>
    </style>
</resources>